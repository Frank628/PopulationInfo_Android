<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_bg"
    android:orientation="vertical" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title2"
        android:textSize="22sp"
        android:text="人口信息采集仪"
        android:gravity="center"
        android:layout_marginTop="220dp"
        />
    	<RelativeLayout android:layout_width="match_parent"
    	    android:layout_height="wrap_content">
    	<LinearLayout 
    	    android:id="@+id/ll_default"
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
    	    >
	    <EditText 
	        android:id="@+id/edt_user"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="点击选择用户名"
	        android:textSize="@dimen/large_middle_size"
	        android:textColorHint="@color/title4"
	        android:textColor="@color/title2"
	        android:background="@drawable/login_bg"
	        android:padding="10dp"
	        android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginTop="20dp"
		    android:layout_gravity="center_horizontal"
		    android:focusable="false"
		    android:focusableInTouchMode="false"
	        />
	    <EditText 
	        android:id="@+id/edt_password"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="密码"
	        android:inputType="textPassword"
	        android:textSize="@dimen/large_middle_size"
	        android:textColorHint="@color/title4"
	        android:textColor="@color/title2"
	        android:background="@drawable/login_bg"
	        android:padding="10dp"
	        android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginTop="15dp"
		    android:layout_gravity="center_horizontal"
		    android:focusable="false"
	        />
	    </LinearLayout>
	    <LinearLayout 
    	    android:id="@+id/ll_toggle"
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:visibility="gone"
    	    >
	    <com.jinchao.population.widget.DrawableClickEditText
	        android:id="@+id/edt_user2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="请输入用户名"
	        android:textSize="@dimen/micro_middle_size"
	        android:textColorHint="@color/title4"
	        android:textColor="@color/title2"
	        android:background="@drawable/login_bg"
	        android:padding="10dp"
	        android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginTop="20dp"
			android:singleLine="true"
			android:drawableRight="@drawable/icon_down"
		    android:layout_gravity="center_horizontal"
	        />
	    <EditText 
	        android:id="@+id/edt_password2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="密码"
	        android:inputType="textPassword"
	        android:textSize="@dimen/micro_middle_size"
	        android:textColorHint="@color/title4"
	        android:textColor="@color/title2"
	        android:background="@drawable/login_bg"
	        android:padding="10dp"
	        android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginTop="15dp"
			android:singleLine="true"
		    android:layout_gravity="center_horizontal"
	        />
	    </LinearLayout>
	    </RelativeLayout>
	    <Button 
	        android:id="@+id/btn_login"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/small_middle_size"
	        android:textColor="@color/white"
	        android:text="立即登录"
	        android:padding="10dp"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:background="@drawable/btn_login_click"
	        />
	    <Button 
	        android:id="@+id/btn_toggle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/small_middle_size"
	        android:textColor="@color/white"
	        android:text="切换用户"
	        android:padding="10dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:background="@drawable/btn_login_click"
	        />
	</LinearLayout>
	<TextView
		android:id="@+id/tv_version"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="10dp"
		android:gravity="center"
		android:textColor="@color/white"
		android:textSize="18sp"/>
</RelativeLayout>

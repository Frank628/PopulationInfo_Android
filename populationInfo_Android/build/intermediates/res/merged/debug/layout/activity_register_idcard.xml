<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:focusable="true"
    android:focusableInTouchMode="true"
     >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />

    <LinearLayout 
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/navgation_top"
        android:padding="12dp"
        >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title3"
                    android:text="姓      名"
                    />
                <EditText 
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title2"
                    android:layout_marginLeft="5dp"
                    android:hint="自动读取"
                    android:focusable="false"
                    android:maxLength="30"
                    android:textColorHint="@color/title4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title3"
                    android:text="别      名"
                    />
                <EditText
                    android:id="@+id/edt_formername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title2"
                    android:layout_marginLeft="5dp"
                    android:hint="输入别名"
                    android:maxLength="30"
                    android:textColorHint="@color/title4"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title3"
                    android:text="性      别"
                    />
                <EditText 
                    android:id="@+id/edt_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title2"
                    android:layout_marginLeft="5dp"
                    android:hint="自动读取"
                    android:focusable="false"
                    android:textColorHint="@color/title4"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title3"
                    android:text="民      族"
                    />
                <EditText 
                    android:id="@+id/edt_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title2"
                    android:layout_marginLeft="5dp"
                    android:hint="自动读取"
                    android:focusable="false"
                    android:textColorHint="@color/title4"
                    />
            </LinearLayout>
             <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title3"
                    android:text="出      生"
                    />
                <EditText 
                    android:id="@+id/edt_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/micro_size"
                    android:textColor="@color/title2"
                    android:layout_marginLeft="5dp"
                    android:hint="自动读取"
                    android:focusable="false"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColorHint="@color/title4"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="2"
            android:background="@color/white"
            >
        <ImageView 
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp"
            />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_idcard"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_top"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身 份 证"
            android:textSize="@dimen/micro_size"
            android:textColor="@color/title3"
            />
        <EditText 
            android:id="@+id/edt_idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="自动读取"
            android:textColorHint="@color/title4"
            android:textSize="@dimen/micro_size"
            android:textColor="@color/title2"
            android:layout_marginLeft="5dp"
            android:maxLength="18"
            android:focusable="false"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_idcard"
        android:padding="12dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户籍地址"
            android:textSize="@dimen/micro_size"
            android:textColor="@color/title3"
            />
        <EditText 
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="自动读取或填入"
            android:textColorHint="@color/title4"
            android:textSize="@dimen/micro_size"
            android:textColor="@color/title2"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <EditText 
            android:id="@+id/edt_xaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/title4"
            android:textSize="@dimen/micro_size"
            android:textColor="@color/title2"
            android:layout_below="@+id/ll_address"
            android:layout_margin="12dp"
            android:maxLength="25"
            android:visibility="gone"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edt_xaddress"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <ImageButton
            android:id="@+id/compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@null"
            android:layout_alignParentLeft="true"
            android:src="@drawable/compare"
            android:visibility="gone"
            />
        <ImageButton
            android:id="@+id/replace"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:background="@null"
            android:src="@drawable/replaze"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	    >
	    <ImageButton
	        android:id="@+id/ib_readcard"
	        android:layout_width="0dp"
	        android:layout_height="100dp"
	        android:src="@drawable/index_12"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:clickable="false"
            android:background="#eeeeee"
	        />
	    <ImageButton
	        android:id="@+id/ib_firstgencard"
	        android:layout_width="0dp"
	        android:layout_height="100dp"
	        android:layout_weight="1"
            android:scaleType="fitCenter"
	        android:src="@drawable/index_13"
	        />
	    <ImageButton 
	        android:id="@+id/ib_checkinfo"
	        android:layout_width="0dp"
	        android:layout_height="100dp"
	        android:layout_weight="1"
            android:scaleType="fitCenter"
	        android:src="@drawable/index_14"
	        />
	</LinearLayout>
</RelativeLayout>

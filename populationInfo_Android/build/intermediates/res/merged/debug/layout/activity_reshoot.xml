<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <ImageView 
        android:id="@+id/iv_photo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="center"
        android:layout_marginTop="30dp"
		android:layout_below="@+id/navgation_top"
		android:layout_centerHorizontal="true"
        android:background="@color/black_drak"
		android:src="@drawable/camera_large"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
		android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="45dp"
		android:background="@drawable/login_bg"
        >
	    <EditText 
	        android:id="@+id/edt_content"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textColor="@color/title2"
	        android:textColorHint="@color/title4"
	        android:hint="请输入身份证号或读卡"
	        android:textSize="@dimen/small_size"
	        android:singleLine="true"
	        android:padding="10dp"
	        android:layout_toLeftOf="@+id/btn_readcard"
	        android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"
			android:background="@null"
	        />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#e2e2e2"/>
		<EditText
			android:id="@+id/edt_name"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:textColor="@color/title2"
			android:textColorHint="@color/title4"
			android:hint="请输入补拍者姓名"
			android:textSize="@dimen/small_size"
			android:background="@null"
			android:padding="10dp"
			/>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <RadioGroup 
            android:id="@+id/rg_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton 
                android:id="@+id/rb_fangwu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:checked="true"
                android:text="房屋查询"
                android:layout_weight="1"
                />
            <RadioButton 
                android:id="@+id/rb_renyuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:text="人员查询"
                android:layout_weight="1"
                />
            <RadioButton
                android:id="@+id/rb_nearby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:text="附近出租屋"
                android:layout_weight="1"
                />
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
	    <EditText 
	        android:id="@+id/edt_content"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@drawable/search_bg"
	        android:textColor="@color/title2"
	        android:textColorHint="@color/title4"
	        android:hint="请输入房屋编号"
	        android:textSize="@dimen/micro_size"
	        android:layout_marginTop="5dp"
	        android:singleLine="true"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:layout_toLeftOf="@+id/btn_seach"
	        android:layout_marginRight="12dp"
	        android:layout_centerVertical="true"
	        />
	    <TextView
            android:id="@+id/btn_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查 询"
            android:textSize="@dimen/small_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange_click"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"
        />
    <RadioGroup 
            android:id="@+id/rg_zai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <RadioButton 
                android:id="@+id/rb_zaizhu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:checked="true"
                android:text="在住"
                android:layout_weight="1"
                />
            <RadioButton 
                android:id="@+id/rb_banli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:text="搬离"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                />
        </RadioGroup>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ListView 
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#e2e2e2"
        android:dividerHeight="1dp"
        ></ListView>
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:textColor="@color/title2"
        android:textSize="@dimen/small_middle_size"
        android:lineSpacingExtra="15dp"
        android:gravity="top|center"
        android:visibility="gone"
        />
    </RelativeLayout>
    </LinearLayout>
        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@+id/rotate_header_list_view_frame"
            xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ri_s"
            android:background="@color/white"
            cube_ptr:ptr_duration_to_close="200"
            cube_ptr:ptr_duration_to_close_header="1000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            android:visibility="gone"
            cube_ptr:ptr_resistance="1.7">
            <com.jinchao.population.widget.LoadMoreListView
                android:id="@+id/loadmorelv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#e2e2e2"
                android:dividerHeight="1dp"
                />
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    </RelativeLayout>
</LinearLayout>

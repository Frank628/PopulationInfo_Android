<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
		android:layout_marginTop="10dp"
        >
        <EditText 
	        android:id="@+id/edt_content"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@drawable/search_bg"
	        android:textColor="@color/title2"
	        android:textColorHint="@color/title4"
	        android:hint="请输入房屋编号"
	        android:textSize="@dimen/small_size"
	        android:singleLine="true"
	        android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:layout_toLeftOf="@+id/btn_seach"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        />
        <Button 
            android:id="@+id/btn_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查    询"
            android:textSize="@dimen/small_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_click"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:textColor="@color/title2"
        android:textSize="@dimen/small_size"
        android:lineSpacingExtra="12dp"
		android:padding="10dp"
        android:gravity="top|left"
        />
</LinearLayout>

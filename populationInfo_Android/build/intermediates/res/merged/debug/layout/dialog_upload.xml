<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >
    <com.jinchao.population.widget.RoundProgressBar
        android:id="@+id/rp"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android_custom:roundColor="#15ffffff"
        android_custom:roundProgressColor="#2cb7f0"
        android_custom:textColor="@color/title2"
        android_custom:roundWidth="5dip"
        android:layout_centerInParent="true"
        android_custom:textSize="25sp" />
    <TextView 
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>

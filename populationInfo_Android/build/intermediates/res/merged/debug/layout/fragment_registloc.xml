<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/ll_right"
            android:layout_marginRight="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查询"
                    android:textSize="@dimen/small_size"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_login_click"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_search"
                    android:textColor="@color/title2"
                    android:textSize="@dimen/small_size"
                    android:hint="输入查询的房屋编号"
                    android:singleLine="true"
                    android:textColorHint="@color/title4"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/title2"
                android:textSize="@dimen/small_size"
                android:hint="查询结果"
                android:textColorHint="@color/title2"
                android:minHeight="100dp"
                android:gravity="left|top"
                android:background="#e0e0e0"
                android:padding="6dp"
                android:editable="false"
                android:focusable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_takepic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="拍照"
                android:textSize="@dimen/small_size"
                android:textColor="@color/white"
                android:background="@drawable/btn_login_click"
                android:gravity="center"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/camera_large"
                android:scaleType="center"
                android:background="@drawable/take_pic_bg"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_zhan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/white_click_bg2">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"/>
        <TextView
            android:id="@+id/tv_zhan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="展开地图"
            android:textSize="17sp"
            android:textColor="@color/title3"
            android:drawableLeft="@drawable/ico_shrink2_tint"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5">
        </com.baidu.mapapi.map.MapView>
        <ImageView
            android:id="@+id/iv_requestloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_requestloc"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            />
        <LinearLayout
            android:id="@+id/ll_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/loc"
            android:layout_centerHorizontal="true"
            android:background="@drawable/map_bubble_normal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:maxHeight="60dp"
                android:textSize="13sp"
                android:textColor="#FF9933"
                android:text="房屋\n在这里"
                android:gravity="center"
                android:padding="5dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e0e0e0"/>
            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxWidth="300dp"
                android:maxHeight="60dp"
                android:textColor="@color/title2"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smarttravel_map_start"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>
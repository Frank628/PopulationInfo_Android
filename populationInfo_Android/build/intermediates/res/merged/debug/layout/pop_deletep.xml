<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_dengji_bg"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_centerInParent="true"
        >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择人员去向"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/small_middle_size"
        />
    <RadioGroup 
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RadioButton 
            android:id="@+id/rb_suoneitawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所内他外"
            android:textSize="@dimen/small_middle_size"
            android:checked="true"
            android:textColor="@color/title2"/>
        <RadioButton 
            android:id="@+id/rb_quneisuowai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区内所外"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title2"/>
        <RadioButton 
            android:id="@+id/rb_shiwai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市外"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title2"/>
        <RadioButton 
            android:id="@+id/rb_qita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title2"/>
    </RadioGroup>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/btn_ensure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/title2"
            android:textSize="@dimen/small_middle_size"
            android:layout_weight="1"
            />
        <Button 
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/title2"
            android:textSize="@dimen/small_middle_size"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>

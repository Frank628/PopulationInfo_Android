<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb000000"
    android:orientation="vertical" >
    <ImageButton 
        android:id="@+id/ib_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_close"
        android:background="@drawable/white_click_bg"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        >
        <EditText 
	        android:id="@+id/edt_content"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@drawable/search_bg"
	        android:textColor="@color/title2"
	        android:textColorHint="@color/title4"
	        android:hint="请输入街路巷地址（至少两个字符）"
	        android:textSize="@dimen/micro_middle_size"
	        android:singleLine="true"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:layout_marginLeft="12dp"
	        android:layout_marginRight="10dp"
	        android:layout_toLeftOf="@+id/btn_search"
	        />
        <Button
            android:id="@+id/btn_search" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_click"
            android:layout_alignParentRight="true"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="@dimen/large_middle_size"
			android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
        >
        <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:visibility="gone" />
		<ListView 
		    android:id="@+id/lv"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:divider="#e2e2e2"
		    android:dividerHeight="1dp"
		    >
		</ListView>
	</RelativeLayout>
</LinearLayout>

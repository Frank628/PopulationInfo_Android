<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <ImageView 
            android:id="@+id/iv_outpopulation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/index_01"
            android:background="@drawable/white_click_bg2"
            />
        
        <ImageView 
            android:id="@+id/iv_allpopulation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/index_02"
            android:layout_marginLeft="40dp"
            android:background="@drawable/white_click_bg2"
            />
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <ImageView 
            android:id="@+id/iv_xunluo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/index_03"
            android:background="@drawable/white_click_bg2"
            />
        
        <ImageView 
            android:id="@+id/iv_dianpingche"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/index_04"
            android:layout_marginLeft="40dp"
            android:background="@drawable/white_click_bg2"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <ImageView 
            android:id="@+id/iv_send"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/index_05"
            android:background="@drawable/white_click_bg2"
            />
        
        <ImageView 
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/index_05"
            android:layout_marginLeft="40dp"
            android:visibility="invisible"
            android:background="@drawable/white_click_bg2"
            />
    </LinearLayout>
   
</LinearLayout>

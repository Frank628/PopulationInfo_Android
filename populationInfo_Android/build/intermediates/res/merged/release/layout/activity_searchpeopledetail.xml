<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <RelativeLayout 
		        android:id="@+id/rl_shequ"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_leftshequ" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="室号"
		            />
		        <TextView
		            android:id="@+id/tv_shihao"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_leftshequ"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		   <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_leftname" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="姓名"
		            />
		        <TextView
		            android:id="@+id/tv_name"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_leftname"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_leftcard" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="身份证号"
		            />
		        <TextView
		            android:id="@+id/tv_card"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_leftcard"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_leftstatus" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="居住状态"
		            />
		        <TextView
		            android:id="@+id/tv_status"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_leftstatus"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_leftbianhao" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="房屋编号"
		            />
		        <TextView
		            android:id="@+id/tv_bianhao"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_leftbianhao"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_leftaddress" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="房屋地址"
		            />
		        <TextView
		            android:id="@+id/tv_address"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_leftaddress"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/relative_row_height"
		        android:background="@drawable/white_click_bg2"
		        android:paddingLeft="@dimen/layout_leftright_padding"
		        android:paddingRight="@dimen/layout_leftright_padding"
		        >
		        <TextView
		            android:id="@+id/tv_lefttime" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title2"
		            android:gravity="center_vertical"
		            android:layout_centerVertical="true"
		            android:text="末次采集时间"
		            />
		        <TextView
		            android:id="@+id/tv_time"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical|right"
		            android:textSize="@dimen/small_size"
		            android:textColor="@color/title3"
		            android:layout_toRightOf="@+id/tv_lefttime"
		            android:singleLine="true"
		            android:drawableRight="@drawable/ico_search_next"
		            android:drawablePadding="10dp"
		            android:background="@color/transaction"
		            />
		    </RelativeLayout>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#CACACA"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        />
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginLeft="@dimen/layout_leftright_padding"
		        android:layout_marginRight="@dimen/layout_leftright_padding"
		        android:layout_marginTop="30dp"
		        >
		        <TextView 
            android:id="@+id/btn_yanqi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/small_size"
            android:layout_alignParentLeft="true"
            android:text="延期"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@drawable/btn_ensure_bg"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/btn_zhuxiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/large_size"
            android:layout_alignParentRight="true"
            android:text="注销"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@drawable/btn_ensure_bg"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />
		    </LinearLayout>
</LinearLayout>

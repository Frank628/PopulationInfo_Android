<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <RelativeLayout
        android:id="@+id/rl_start" 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/white_click_bg2"
        android:paddingLeft="@dimen/layout_leftright_padding"
        android:paddingRight="@dimen/layout_leftright_padding"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title1"
            android:text="起始日期"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ico_search_next"
            android:drawablePadding="12dp"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"
        android:paddingLeft="@dimen/layout_leftright_padding"
        android:paddingRight="@dimen/layout_leftright_padding"
        />
    <RelativeLayout 
        android:id="@+id/rl_end"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/white_click_bg2"
        android:paddingLeft="@dimen/layout_leftright_padding"
        android:paddingRight="@dimen/layout_leftright_padding"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title1"
            android:text="截止日期"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_middle_size"
            android:textColor="@color/title2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ico_search_next"
            android:drawablePadding="12dp"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"
        android:paddingLeft="@dimen/layout_leftright_padding"
        android:paddingRight="@dimen/layout_leftright_padding"
        />
    
    <Button 
        android:id="@+id/btn_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_click"
        android:text="确    定"
        android:textColor="@color/white"
        android:textSize="@dimen/small_middle_size"
        android:padding="12dp"
        android:paddingLeft="@dimen/layout_leftright_padding"
        android:paddingRight="@dimen/layout_leftright_padding"
        android:layout_marginTop="30dp"
        />
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/title2"
        android:textSize="@dimen/large_middle_size"
        android:gravity="center"
        />
</LinearLayout>

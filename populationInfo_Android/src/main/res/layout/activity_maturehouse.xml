<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<in.srain.cube.views.ptr.PtrClassicFrameLayout
		android:id="@+id/rotate_header_list_view_frame"
		xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/ri_s"
		android:background="@color/white"
		cube_ptr:ptr_duration_to_close="200"
		cube_ptr:ptr_duration_to_close_header="1000"
		cube_ptr:ptr_keep_header_when_refresh="true"
		cube_ptr:ptr_pull_to_fresh="false"
		cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
		cube_ptr:ptr_resistance="1.7">
		<com.jinchao.population.widget.LoadMoreListView
			android:id="@+id/loadmorelv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:divider="#00e2e2e2"
			android:dividerHeight="3dp"
			/>
	</in.srain.cube.views.ptr.PtrClassicFrameLayout>
		<com.jinchao.population.widget.emptyview.HHEmptyView
			android:id="@+id/empty_view"
			android:layout_width="match_parent"
			android:visibility="gone"
			android:layout_height="match_parent">
		</com.jinchao.population.widget.emptyview.HHEmptyView>
	</FrameLayout>
</LinearLayout>

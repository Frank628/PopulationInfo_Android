<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edt_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_bg"
                android:hint="请输入身份证"
                android:imeOptions="actionSearch"
                android:padding="8dp"
                android:maxLength="18"
                android:singleLine="true"
                android:textColorHint="#9DA0A3"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="5dp"
                android:textSize="16sp" />
            <RadioGroup
                android:id="@+id/rg_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0.5dp"
                android:layout_below="@+id/edt_idcard">
                <RadioButton
                    android:id="@+id/rb_roomcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/orange"
                    android:checked="true"
                    android:gravity="center"
                    android:text="按室号排序"/>
                <RadioButton
                    android:id="@+id/rb_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:text="按时间排序"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#e2e2e2"
                    android:dividerHeight="1dp"/>
                <TextView
                    android:id="@+id/tv_nopeople"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|top"
                    android:padding="10dp"
                    android:textSize="1sp"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:visibility="gone"
                    android:textColor="@color/title2"/>
            </RelativeLayout>
        </LinearLayout>
        <com.jinchao.population.widget.emptyview.HHEmptyView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">
        </com.jinchao.population.widget.emptyview.HHEmptyView>
        <TextView
            android:id="@+id/tv_nfc_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/icon_nfc_read_large"
            android:drawablePadding="30dp"
            android:textColor="@color/theme_color"
            android:textSize="19sp"
            android:text="碰一碰NFC标签，查询在住人员"/>
    </RelativeLayout>
</LinearLayout>
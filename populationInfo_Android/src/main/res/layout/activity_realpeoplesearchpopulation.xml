<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
	<include
		android:id="@+id/navgation_top"
		layout="@layout/navigation_layout"

		/>
    <RelativeLayout 
        android:id="@+id/ri_s"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/navgation_top"
        >
	    <EditText 
	        android:id="@+id/edt_content"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/relative_row_height"
	        android:background="@drawable/search_bg"
	        android:textColor="@color/title2"
	        android:textColorHint="@color/title4"
	        android:hint="请输入房屋编号或地址"
	        android:textSize="@dimen/small_size"
	        android:singleLine="true"
	        android:paddingLeft="24dp"
	        android:paddingRight="24dp"
	        android:layout_toLeftOf="@+id/btn_seach"
	        android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"
	        />
	    <Button 
            android:id="@+id/btn_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查    询"
            android:textSize="@dimen/small_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_click"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
	   
    </RelativeLayout>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/rotate_header_list_view_frame"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ri_s"
        android:background="@color/white"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">
     <ListView 
         android:id="@+id/lv"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:divider="@color/transaction"
		 	android:dividerHeight="5dp"
		 android:padding="5dp"
	        >
	 </ListView>
	 </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</RelativeLayout>

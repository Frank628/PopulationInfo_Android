<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
    <LinearLayout 
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e2e2e2"
        >
        <ImageButton 
            android:id="@+id/ib_zen"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/btn_rentalhouse_zen"
            android:background="@color/white"
			android:scaleType="fitCenter"
            />
        <ImageButton 
            android:id="@+id/ib_quan"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/btn_rentalhouse_quan"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
			android:scaleType="fitCenter"
            />
        <ImageButton 
            android:id="@+id/ib_tian"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/btn_rentalhouse_tian"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
			android:scaleType="fitCenter"
            />
        
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#e2e2e2"
	    />
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<ListView 
	    android:id="@+id/lv"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="#e2e2e2"
	    android:dividerHeight="1dp"
	    android:background="#f5f5f5"
	    ></ListView>
		<TextView
			android:id="@+id/tv_data"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="12dp"
			android:gravity="center_horizontal"
			android:textSize="19sp"
			android:textColor="@color/title2"
			android:text="暂无新增数据"
			android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>

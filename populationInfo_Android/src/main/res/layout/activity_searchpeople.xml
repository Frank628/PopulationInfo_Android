<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        <RadioGroup 
            android:id="@+id/rg_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton 
                android:id="@+id/rb_fangwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:checked="true"
                android:text="房屋查询"
                />
            <RadioButton 
                android:id="@+id/rb_renyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:text="人员查询"
                android:layout_marginLeft="15dp"
                />
        </RadioGroup>
        <Button 
            android:id="@+id/btn_readcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读    卡"
            android:textSize="@dimen/small_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_click"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:enabled="false"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
	    <EditText 
	        android:id="@+id/edt_content"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@drawable/search_bg"
	        android:textColor="@color/title2"
	        android:textColorHint="@color/title4"
	        android:hint="请输入房屋编号"
	        android:textSize="@dimen/micro_size"
	        android:layout_marginTop="5dp"
	        android:singleLine="true"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:layout_toLeftOf="@+id/btn_seach"
	        android:layout_marginRight="30dp"
	        android:layout_centerVertical="true"
	        />
	    <Button 
            android:id="@+id/btn_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查    询"
            android:textSize="@dimen/small_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_click"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"
        />
    <RadioGroup 
            android:id="@+id/rg_zai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <RadioButton 
                android:id="@+id/rb_zaizhu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:checked="true"
                android:text="在住"
                android:layout_weight="1"
                
                />
            <RadioButton 
                android:id="@+id/rb_banli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="@dimen/micro_size"
                android:textColor="@color/title2"
                android:text="搬离"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                />
        </RadioGroup>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ListView 
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#e2e2e2"
        android:dividerHeight="1dp"
        ></ListView>
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:textColor="@color/title2"
        android:textSize="@dimen/small_middle_size"
        android:lineSpacingExtra="15dp"
        android:gravity="top|center"
        android:visibility="gone"
        />
    </RelativeLayout>
</LinearLayout>

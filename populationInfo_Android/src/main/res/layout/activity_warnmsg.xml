<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        android:id="@+id/navgation_top"
        layout="@layout/navigation_layout"
        />

    <LinearLayout
        android:id="@+id/ll_idcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/improtant_people_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/improtant_people_tv_bg"
            android:text="身份证："/>
        <com.jinchao.population.widget.ValidateEidtText
            android:id="@+id/edt_idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:hint="请输入身份证号或读卡"
            android:textColorHint="@color/title3"
            android:background="@null"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"
            android:maxLength="18"
            android:drawablePadding="5dp"
            app:vd_textErrorColor="@color/red"
            app:vd_textRightColor="@color/title1"
            app:vd_drawable_right_right="@drawable/icon_gou"
            app:vd_drawable_right_error="@drawable/icon_gantan"
            app:vd_validate_type="id_card"
            />
    </LinearLayout>
    <Button 
        android:id="@+id/btn_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_click"
        android:text="确    定"
        android:textColor="@color/white"
        android:textSize="@dimen/small_middle_size"
        android:padding="12dp"
        android:paddingLeft="@dimen/layout_leftright_padding"
        android:paddingRight="@dimen/layout_leftright_padding"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        />
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/title2"
        android:textSize="17sp"
        android:gravity="top|left"
        android:padding="10dp"
        />
</LinearLayout>

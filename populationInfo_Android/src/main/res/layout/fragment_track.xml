<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e0e0e0"
    android:layout_height="match_parent">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_idcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/improtant_people_bg"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/improtant_people_tv_bg"
                android:text="身份证："/>
            <com.jinchao.population.widget.ValidateEidtText
                android:id="@+id/edt_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:hint="请输入身份证号或读卡"
                android:textColorHint="@color/title3"
                android:background="@null"
                android:gravity="center"
                android:inputType="text"
                android:singleLine="true"
                android:maxLength="18"
                android:drawablePadding="5dp"
                app:vd_textErrorColor="@color/red"
                app:vd_textRightColor="@color/title1"
                app:vd_drawable_right_right="@drawable/icon_gou"
                app:vd_drawable_right_error="@drawable/icon_gantan"
                app:vd_validate_type="id_card"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_remakeup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_idcard"
            android:background="@drawable/btn_nfcwrite_click"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="居住证状态查询"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_kastatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            android:text="卡状态："/>
        <TextView
            android:id="@+id/tv_caozuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title3"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="●  操作类型："/>
        <TextView
            android:id="@+id/tv_shenpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title3"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="●  是否审批："/>
        <TextView
            android:id="@+id/tv_zhizheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title3"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="●  是否制证："/>
        <TextView
            android:id="@+id/tv_xiafa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title3"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="●  是否下发："/>
        <TextView
            android:id="@+id/tv_lingzheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title3"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="●  是否领证："/>


    </LinearLayout>
</LinearLayout>
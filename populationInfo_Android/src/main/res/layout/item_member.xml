<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/add_custom_bg"
        android:text="1"
        android:background="@color/Gray"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/close_btn"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Gray"
        android:layout_below="@+id/tv_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_row_height"
            android:paddingLeft="@dimen/layout_leftright_padding"
            android:paddingRight="@dimen/layout_leftright_padding"
            >
            <TextView
                android:id="@+id/tv_yfjzzhleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_size"
                android:textColor="@color/title1"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="预防接种证号"
                />
            <EditText
                android:id="@+id/edt_yfjzzh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/small_middle_size"
                android:textColor="@color/title2"
                android:layout_toRightOf="@+id/tv_yfjzzhleft"
                android:hint="请输入接种证号"
                android:textColorHint="@color/title4"
                android:background="@color/white"
                android:inputType="text"
                android:singleLine="true"
                android:paddingRight="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CACACA"
            android:layout_marginLeft="@dimen/layout_leftright_padding"
            android:layout_marginRight="@dimen/layout_leftright_padding"
            />
    </LinearLayout>
</RelativeLayout>